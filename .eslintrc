{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/extensions": [".ts, .tsx"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts, .tsx"]
    },
    "import/resolver": {
      "node": {
        "extensions": [".ts, .tsx"]
      }
    },
    "import/ignore": ["\\.js$"]
  }
}
