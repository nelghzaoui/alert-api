{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/modules/core/*"],
      "@account/*": ["src/modules/features/account/*"],
      "@alert/*": ["src/modules/features/alert/*"],
      "@security/*": ["src/modules/features/security/*"],
      "@server/*": ["src/modules/features/server/*"]
    },
    "incremental": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
